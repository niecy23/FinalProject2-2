@model User

<h3>@Model.UserID</h3>

<table class="table">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email Address</th>
        <th>Phone Number</th>
        <th>Event ID</th>
        <th>Event Name</th>
    </tr>
    <tr>
        <td>@Model.UserID</td>
        <td>@Model.FirstName</td>
        <td>@Model.LastName</td>
        <td>@Model.EmailAddress</td>
        <td>@Model.PhoneNumber</td>
        <td>@Model.EventID</td>
        <td>@Model.EventName</td>
    </tr>
</table>

<div style="display: block">
    <a href="/User/UpdateUser/@Model.UserID" class="btn btn-secondary">Update this User</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteUser", "User", "Post"))
    {
        <input type="hidden" asp-for="UserID" value="@Model.UserID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this User" />
    }
</div>


